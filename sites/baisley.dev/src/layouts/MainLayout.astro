---
import '../styles/global.css';

import MainHead from '../components/MainHead.astro';
import SiteHeader from '../components/SiteHeader.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en-US" dir="ltr" class="scheme-light dark:scheme-dark h-full">
  <MainHead title={title}></MainHead>

  <body class="bg-white dark:bg-gray-950 h-full flex flex-col">
    <SiteHeader />
    <main class="container mx-auto p-4 py-12 flex-1">
    
      <slot />
    </main>
    <Footer />

  </body>
</html>